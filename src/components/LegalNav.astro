---
const { currentPage } = Astro.props;

const pages = [
  { name: "Mentions légales", path: "/legal/mentions-legales" },
  {
    name: "Politique de confidentialité",
    path: "/legal/politique-confidentialite",
  },
  { name: "Conditions d'utilisation", path: "/legal/conditions" },
  { name: "Politique de cookies", path: "/legal/politique-cookies" },
];
---

<div class="bg-gray-50 rounded-lg p-4 mb-8">
  <h3 class="font-secondary text-lg font-semibold mb-3 text-primary">
    Documentation légale
  </h3>
  <div class="flex flex-wrap gap-2">
    {
      pages.map((page) => (
        <a
          href={page.path}
          class={`px-4 py-2 rounded-full text-sm transition-colors duration-300 ${
            currentPage === page.path
              ? "bg-primary text-white font-medium"
              : "bg-white border border-gray-200 text-gray-700 hover:bg-primary hover:text-white hover:border-primary"
          }`}
        >
          {page.name}
        </a>
      ))
    }
  </div>
</div>
