---
import Button from "./Button.astro";
import Logo from "../assets/logo_echosafe.svg";
---

<header
  class="px-6 py-4 z-10 w-full flex items-stretch justify-between transition-all duration-300 ease-in-out bg-white"
>
  <div class="flex items-center gap-2">
    <a href="/">
      <Logo class="w-20 lg:w-32 h-auto" />
    </a>
  </div>

  <button
    class="group relative z-20 flex h-6 w-8 flex-col justify-between self-center *:h-[2px] *:w-full *:bg-[var(--color-primary)] *:transition-all *:duration-300 *:ease lg:hidden"
    id="menu-btn"
    aria-label="Menu"
    aria-controls="menu"
    aria-expanded="false"
  >
    <span
      class="group-aria-expanded:translate-y-[10.5px] group-aria-expanded:rotate-45 group-aria-expanded:bg-[var(--color-primary)]"
    ></span>
    <span class="group-aria-expanded:opacity-0"></span>
    <span
      class="group-aria-expanded:-translate-y-[10.5px] group-aria-expanded:-rotate-45 group-aria-expanded:bg-[var(--color-primary)]"
    ></span>
  </button>

  <nav
    class="visible fixed z-10 inset-0 text-xl font-bold text-[var(--color-primary)] opacity-100 transition-all duration-300 ease-in-out aria-hidden:invisible aria-hidden:opacity-0 bg-white"
    id="menu"
    aria-hidden="true"
  >
    <ul class="mt-30 w-3/4">
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >Accueil</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/invite"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >Humeur</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/programmes"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >DÃ©fis quotidiens</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/films"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >Message</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/a-propos"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >Professionnels</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
      </li>
      <li>
        <a
          class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
          href="/a-propos"
        >
          <span
            class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
            >Kit de secours</span
          >
          <span
            class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
          ></span>
        </a>
        <li>
          <a
            class="block rounded-r-full pl-28 py-3 mb-8 relative overflow-hidden group"
            href="/a-propos"
          >
            <span
              class="relative z-10 text-[var(--color-primary)] group-hover:text-white"
              >Faire un don
            </span>
            <span
              class="absolute inset-0 bg-[var(--color-primary)] -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-in-out"
            ></span>
          </a>
        </li>
      </li>
    </ul>
  </nav>
</header>

<script>
  const toggle = document.querySelector("#menu-btn");
  const nav = document.querySelector("#menu");
  const page = document.body;

  if (toggle && nav) {
    toggle.addEventListener("click", () => {
      const isOpen = toggle.ariaExpanded === "true";
      const isClosed = !isOpen;
      toggle.ariaExpanded = String(isClosed);
      nav.ariaHidden = String(isOpen);
      page.classList.toggle("noscroll", isClosed);
    });
  }
</script>
