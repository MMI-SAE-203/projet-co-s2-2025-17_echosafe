---
export interface Props {
  conversationId: string;
  otherUser: any;
  messages: any[];
  currentUserId: string;
  isVolunteerChat?: boolean;
}

const {
  conversationId,
  otherUser,
  messages,
  currentUserId,
  isVolunteerChat = false,
} = Astro.props;

const isValidConversation = !!conversationId;
---

<div class="flex flex-col h-full bg-gray-50">
  <!-- En-tête de conversation -->
  <div class="flex items-center p-4 bg-white border-b shadow-sm">
    <div
      class="w-10 h-10 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden"
    >
      {
        otherUser?.avatarUrl ? (
          <img
            src={otherUser.avatarUrl}
            alt=""
            class="w-full h-full object-cover"
          />
        ) : (
          <div class="w-full h-full flex items-center justify-center bg-primary text-white text-lg">
            {otherUser?.pseudo_utilisateur?.charAt(0) ||
              otherUser?.prenom_utilisateur?.charAt(0) ||
              "?"}
          </div>
        )
      }
    </div>
    <div class="ml-3">
      <p class="font-medium">
        {otherUser?.pseudo_utilisateur || "Utilisateur"}
      </p>
      {isVolunteerChat && <p class="text-xs text-primary">Aidant bénévole</p>}
    </div>
  </div>

  {
    !isValidConversation && (
      <div class="flex-1 flex items-center justify-center bg-gray-50 p-4">
        <div class="text-center text-gray-500">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-16 w-16 mx-auto text-gray-300 mb-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1"
              d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <h3 class="text-lg font-medium mb-2">Conversation non disponible</h3>
          <p>La conversation demandée n'existe pas ou a été supprimée.</p>
        </div>
      </div>
    )
  }

{isValidConversation && (
    <>
  <!-- Zone des messages -->
  <div
    id="message-container"
    class="flex-1 overflow-y-auto p-4 space-y-3 bg-[#f5f5f5]"
    style="background-image: url('data:image/svg+xml;base64,');"
  >
    {
      messages.length === 0 ? (
        <div class="flex flex-col items-center justify-center h-full text-center py-8 text-gray-500">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-16 w-16 text-gray-300 mb-3"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
            />
          </svg>
          <p class="font-medium">Aucun message pour l'instant</p>
          <p class="text-sm mt-2">Commencez la conversation...</p>
        </div>
      ) : (
        messages.map((message, index) => {
          const isSender = message.sender_id === currentUserId;
          const showAvatar =
            !isSender &&
            (index === 0 ||
              messages[index - 1]?.sender_id !== message.sender_id);
          const messageTime = new Date(message.created).toLocaleTimeString([], {
            hour: "2-digit",
            minute: "2-digit",
          });

          return (
            <div
              class={`flex items-end ${isSender ? "justify-end" : "justify-start"} gap-2`}
            >
              {/* Avatar pour les messages reçus */}
              {!isSender && showAvatar ? (
                <div class="w-8 h-8 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden mb-1">
                  {otherUser?.avatarUrl ? (
                    <img
                      src={otherUser.avatarUrl}
                      alt=""
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-primary text-white text-sm">
                      {otherUser?.pseudo_utilisateur?.charAt(0) || "?"}
                    </div>
                  )}
                </div>
              ) : !isSender ? (
                <div class="w-8 flex-shrink-0" />
              ) : null}

              <div
                class={`max-w-[75%] px-3 py-2 rounded-lg ${
                  isSender
                    ? "bg-primary text-white rounded-br-none"
                    : "bg-white text-gray-800 rounded-bl-none shadow-sm"
                }`}
              >
                <p class="whitespace-pre-wrap break-words">{message.content}</p>
                <p
                  class={`text-xs mt-1 text-right ${isSender ? "text-primary-100" : "text-gray-500"}`}
                >
                  {messageTime}
                  {isSender && (
                    <span class="ml-1">
                      {message.read_by && message.read_by.length > 1 ? (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3 w-3 inline"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      ) : (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3 w-3 inline opacity-70"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      )}
                    </span>
                  )}
                </p>
              </div>
            </div>
          );
        })
      )
    }
  </div>

  <!-- Formulaire d'envoi de message -->
  <div class="border-t bg-white p-3">
  <form id="message-form" class="flex items-center gap-2">
    <input type="hidden" name="conversationId" value={conversationId} />
    <input type="hidden" id="current-user-id" value={currentUserId} />

    <div class="flex-1 relative">
      <input
        type="text"
        name="message"
        id="message-input"
        placeholder="Écrivez votre message..."
        class="w-full py-3 px-4 bg-gray-100 border-0 rounded-full focus:outline-none focus:ring-2 focus:ring-primary/30 pr-10"
      />
      <button
        type="button"
        id="emoji-button"
        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9a1 1 0 100-2 1 1 0 000 2zm7-1a1 1 0 11-2 0 1 1 0 012 0zm-7.536 5.879a1 1 0 001.415 0 3 3 0 014.242 0 1 1 0 001.415-1.415 5 5 0 00-7.072 0 1 1 0 000 1.415z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>

    <button
      type="submit"
      class="bg-primary text-white p-3 rounded-full hover:bg-primary/90 transition focus:outline-none focus:ring-2 focus:ring-primary/50"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"
        ></path>
      </svg>
    </button>
  </form>
</div>
  </>
  )}
</div>

<script>
    import { db } from '../firebase.js';
    import { collection, addDoc, query, where, orderBy, onSnapshot, serverTimestamp, getDocs, updateDoc, doc, arrayUnion } from "firebase/firestore";
  
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("message-form");
      const messageContainer = document.getElementById("message-container");
      const messageInput = document.getElementById("message-input");
      const currentUserIdElement = document.getElementById("current-user-id");
  
      // Faire défiler vers le bas pour voir les derniers messages
      if (messageContainer) {
        messageContainer.scrollTop = messageContainer.scrollHeight;
      }
  
      // Focus sur le champ de saisie
      if (messageInput) {
        messageInput.focus();
      }
  
      // Récupérer l'ID de la conversation et l'ID de l'utilisateur
      const conversationIdInput = document.querySelector('input[name="conversationId"]');
      const conversationId = conversationIdInput?.value;
      const currentUserId = currentUserIdElement?.value;
  
      console.log("Initialisation du chat:", { conversationId, currentUserId });
  
      // Vérifier si les informations nécessaires sont présentes
      if (!conversationId || !currentUserId) {
        console.error("ID de conversation ou utilisateur manquant");
        return;
      }
  
      // Charger les messages existants et configurer l'écoute en temps réel
      setupMessagesListener(conversationId, currentUserId);
  
      // Gestionnaire d'envoi de message
      form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const message = formData.get("message");
  
        if (!message || message.toString().trim() === "") return;
  
        // Vider le champ de saisie
        messageInput.value = "";
  
        // Créer un ID temporaire pour le message
        const tempMessageId = `temp-${Date.now()}`;
        
        // Afficher un message temporaire
        const currentTime = new Date().toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
        });
        
        const messageHtml = `
          <div class="flex items-end justify-end gap-2" id="${tempMessageId}">
            <div class="max-w-[75%] px-3 py-2 rounded-lg bg-primary text-white rounded-br-none opacity-70">
              <p class="whitespace-pre-wrap break-words">${message.toString().trim()}</p>
              <p class="text-xs mt-1 text-right text-primary-100">
                ${currentTime}
                <span class="ml-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline animate-pulse" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </p>
            </div>
          </div>
        `;
        
        // Ajouter le message temporaire au conteneur
        if (messageContainer) {
          messageContainer.insertAdjacentHTML("beforeend", messageHtml);
          messageContainer.scrollTop = messageContainer.scrollHeight;
        }
  
        // Envoyer le message à Firebase
        try {
          console.log("Envoi du message via Firebase...");
          
          // Ajouter le message à la collection "messages"
          const messagesRef = collection(db, "messages");
          const newMessage = await addDoc(messagesRef, {
            conversation_id: conversationId,
            content: message.toString().trim(),
            sender_id: currentUserId,
            read_by: [currentUserId],
            created_at: serverTimestamp()
          });
          
          console.log("Message créé avec succès:", newMessage.id);
          
          // Mettre à jour la conversation avec le dernier message
          try {
            const conversationRef = doc(db, "conversations", conversationId);
            await updateDoc(conversationRef, {
              last_message_id: newMessage.id,
              updated_at: serverTimestamp()
            });
          } catch (updateError) {
            console.warn("Erreur lors de la mise à jour de la conversation:", updateError);
          }
          
          // Remplacer le message temporaire (sera fait automatiquement par l'écouteur)
          const tempMessageElement = document.getElementById(tempMessageId);
          if (tempMessageElement) {
            tempMessageElement.classList.remove("opacity-70");
          }
          
        } catch (error) {
          console.error("Erreur lors de l'envoi du message:", error);
          
          // Gérer l'erreur dans l'interface
          const tempMessageElement = document.getElementById(tempMessageId);
          if (tempMessageElement) {
            const errorMessageHtml = `
              <div class="flex items-end justify-end gap-2">
                <div class="max-w-[75%] px-3 py-2 rounded-lg bg-red-500 text-white rounded-br-none">
                  <p class="whitespace-pre-wrap break-words">${message.toString().trim()}</p>
                  <p class="text-xs mt-1 text-right text-red-100">
                    ${currentTime} - Erreur: ${error.message || "Erreur inconnue"}
                    <button class="ml-1 text-white underline" onclick="resendMessage('${tempMessageId}', '${message.toString().trim().replace(/'/g, "\\'")}')">
                      Réessayer
                    </button>
                  </p>
                </div>
              </div>
            `;
            tempMessageElement.outerHTML = errorMessageHtml;
          }
        }
      });
  
      // Fonction pour renvoyer un message qui a échoué
      window.resendMessage = async (messageId, content) => {
        const errorElement = document.getElementById(messageId);
        if (errorElement) {
          errorElement.remove();
          if (messageInput) {
            messageInput.value = content;
            messageInput.focus();
          }
        }
      };
    });
  
    // Configurer l'écouteur de messages
    function setupMessagesListener(conversationId, currentUserId) {
      console.log("Configuration de l'écouteur de messages...");
      
      // Créer une requête pour obtenir les messages de cette conversation
      const messagesRef = collection(db, "messages");
      const q = query(
        messagesRef,
        where("conversation_id", "==", conversationId),
        orderBy("created_at", "asc")
      );
      
      // Écouteur en temps réel
      const unsubscribe = onSnapshot(q, (snapshot) => {
        console.log("Mise à jour des messages reçue");
        
        snapshot.docChanges().forEach((change) => {
          if (change.type === "added") {
            const message = {
              id: change.doc.id,
              ...change.doc.data()
            };
            
            // Vérifier si ce message existe déjà dans le DOM
            if (!document.getElementById(`message-${message.id}`)) {
              // Si c'est un message d'un autre utilisateur
              if (message.sender_id !== currentUserId) {
                // Récupérer les détails de l'expéditeur et afficher le message
                fetchSenderDetails(message.sender_id).then(senderInfo => {
                  const messageWithSender = {
                    ...message,
                    sender_initial: senderInfo?.pseudo_utilisateur?.charAt(0) || "?"
                  };
                  appendNewMessage(messageWithSender, currentUserId);
                });
              } else {
                // Si c'est notre propre message, remplacer le message temporaire
                updateSentMessage(message);
              }
            }
          }
        });
      });
      
      // Nettoyer l'écouteur lorsque l'utilisateur quitte la page
      window.addEventListener('beforeunload', () => {
        console.log("Nettoyage de l'écouteur de messages");
        unsubscribe();
      });
    }
  
    // Récupérer les détails de l'expéditeur
    async function fetchSenderDetails(senderId) {
      try {
        // Requête Firestore pour obtenir les détails de l'utilisateur
        const userRef = doc(db, "users", senderId);
        const userSnap = await getDoc(userRef);
        
        if (userSnap.exists()) {
          return userSnap.data();
        } else {
          console.error("Utilisateur non trouvé");
          return { pseudo_utilisateur: "?" };
        }
      } catch (error) {
        console.error("Erreur lors de la récupération des détails de l'expéditeur:", error);
        return { pseudo_utilisateur: "?" };
      }
    }
  
    // Ajouter un nouveau message au conteneur
    function appendNewMessage(message, currentUserId) {
      const messageContainer = document.getElementById("message-container");
      if (!messageContainer) return;
      
      console.log("Ajout d'un nouveau message au conteneur:", message);
      
      // Vérifier si le message existe déjà dans le DOM
      if (document.getElementById(`message-${message.id}`)) {
        return;
      }
      
      const isSender = message.sender_id === currentUserId;
      const messageTime = message.created_at ? 
        new Date(message.created_at.toDate()).toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
        }) : 
        new Date().toLocaleTimeString([], {
          hour: "2-digit",
          minute: "2-digit",
        });
      
      // Construire l'HTML du message
      let messageHtml;
      
      if (isSender) {
        messageHtml = `
          <div class="flex items-end justify-end gap-2" id="message-${message.id}">
            <div class="max-w-[75%] px-3 py-2 rounded-lg bg-primary text-white rounded-br-none">
              <p class="whitespace-pre-wrap break-words">${message.content}</p>
              <p class="text-xs mt-1 text-right text-primary-100">
                ${messageTime}
                <span class="ml-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline ${message.read_by && message.read_by.length > 1 ? '' : 'opacity-70'}" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </p>
            </div>
          </div>
        `;
      } else {
        messageHtml = `
          <div class="flex items-end justify-start gap-2" id="message-${message.id}">
            <div class="w-8 h-8 rounded-full bg-gray-200 flex-shrink-0 overflow-hidden mb-1">
              <div class="w-full h-full flex items-center justify-center bg-primary text-white text-sm">
                ${message.sender_initial || "?"}
              </div>
            </div>
            <div class="max-w-[75%] px-3 py-2 rounded-lg bg-white text-gray-800 rounded-bl-none shadow-sm animate-fadeIn">
              <p class="whitespace-pre-wrap break-words">${message.content}</p>
              <p class="text-xs mt-1 text-right text-gray-500">
                ${messageTime}
              </p>
            </div>
          </div>
        `;
      }
      
      // Ajouter le message au conteneur
      messageContainer.insertAdjacentHTML("beforeend", messageHtml);
      messageContainer.scrollTop = messageContainer.scrollHeight;
      
      // Si c'est un message reçu, le marquer comme lu
      if (!isSender) {
        markMessageAsRead(message.id, currentUserId);
        
        // Notification sonore si le navigateur est en arrière-plan
        if (document.hidden) {
          try {
            if (Notification.permission === "granted") {
              new Notification("Nouveau message", {
                body: message.content.substring(0, 50) + (message.content.length > 50 ? "..." : ""),
                icon: "/favicon.svg"
              });
            }
            
            // Jouer un son de notification
            const audio = new Audio("/assets/notification.mp3");
            audio.play().catch(err => console.log("Impossible de jouer le son de notification"));
          } catch (e) {
            console.log("Notification non supportée");
          }
        }
      }
    }
  
    // Mettre à jour un message envoyé (remplacer le message temporaire)
    function updateSentMessage(message) {
      // Identifier tous les messages temporaires
      const tempMessages = document.querySelectorAll('[id^="temp-"]');
      
      if (tempMessages.length > 0) {
        // Remplacer le dernier message temporaire
        const lastTempMessage = tempMessages[tempMessages.length - 1];
        
        const messageTime = message.created_at ? 
          new Date(message.created_at.toDate()).toLocaleTimeString([], {
            hour: "2-digit",
            minute: "2-digit",
          }) : 
          new Date().toLocaleTimeString([], {
            hour: "2-digit",
            minute: "2-digit",
          });
        
        const realMessageHtml = `
          <div class="flex items-end justify-end gap-2" id="message-${message.id}">
            <div class="max-w-[75%] px-3 py-2 rounded-lg bg-primary text-white rounded-br-none">
              <p class="whitespace-pre-wrap break-words">${message.content}</p>
              <p class="text-xs mt-1 text-right text-primary-100">
                ${messageTime}
                <span class="ml-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline opacity-70" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
              </p>
            </div>
          </div>
        `;
        
        lastTempMessage.outerHTML = realMessageHtml;
      }
    }
  
    // Marquer un message comme lu
    async function markMessageAsRead(messageId, currentUserId) {
      try {
        const messageRef = doc(db, "messages", messageId);
        await updateDoc(messageRef, {
          read_by: arrayUnion(currentUserId)
        });
        
        console.log("Message marqué comme lu");
      } catch (error) {
        console.error("Erreur lors du marquage du message comme lu:", error);
      }
    }
  </script>
  
  <!-- Ajouter une balise script pour importer Firebase directement (pour le développement) -->
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>
<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out forwards;
  }
</style>

<script src="https://unpkg.com/pocketbase@0.17.3/dist/pocketbase.umd.js"></script>