          </div>
        </div>

        <!-- Membre 3 -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden relative">
          <div class="absolute top-4 right-4">
            <div
              class="w-16 h-16 rounded-full bg-gray-200 border-2 border-primary overflow-hidden"
            >
              <!-- Add image here when available -->
              <div
                class="w-full h-full flex items-center justify-center text-primary"
              >
                <svg
