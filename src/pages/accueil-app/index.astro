---
import AppLayout from "../../layouts/Layoutapp.astro";
import PocketBase from "pocketbase";

// Récupérer l'utilisateur connecté
const pb = new PocketBase("https://echosafe.eloishenry.fr");
const authCookie = Astro.request.headers.get("cookie");
if (authCookie) {
  pb.authStore.loadFromCookie(authCookie);
}

// Rediriger si non connecté
if (!pb.authStore.isValid) {
  return Astro.redirect("/auth/connexion");
}

const user = pb.authStore.model;
---

<AppLayout title="EchoSafe - Accueil">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-primary">
        Bienvenue, {user.pseudo_utilisateur || "utilisateur"}
      </h1>
      <p class="text-gray-600 mt-2">Que souhaitez-vous faire aujourd'hui ?</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Carte Messagerie -->
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
        <div class="flex items-center mb-4">
          <div class="bg-primary/10 p-3 rounded-full">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
              ></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold ml-3">Messagerie</h2>
        </div>
        <p class="text-gray-600 mb-4">
          Discutez avec des aidants bénévoles ou d'autres utilisateurs.
        </p>
        <a
          href="/messages"
          class="block text-center py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition"
        >
          Accéder
        </a>
      </div>

      <!-- Carte Ressources -->
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
        <div class="flex items-center mb-4">
          <div class="bg-primary/10 p-3 rounded-full">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              ></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold ml-3">Ressources</h2>
        </div>
        <p class="text-gray-600 mb-4">
          Consultez des guides et informations utiles sur le harcèlement.
        </p>
        <a
          href="/ressources"
          class="block text-center py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition"
        >
          Découvrir
        </a>
      </div>

      <!-- Carte Forum -->
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
        <div class="flex items-center mb-4">
          <div class="bg-primary/10 p-3 rounded-full">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
              ></path>
            </svg>
          </div>
          <h2 class="text-xl font-semibold ml-3">Forum</h2>
        </div>
        <p class="text-gray-600 mb-4">
          Partagez votre expérience et entraidez-vous avec d'autres
          utilisateurs.
        </p>
        <a
          href="/forum"
          class="block text-center py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition"
        >
          Participer
        </a>
      </div>
    </div>

    <div class="mt-10 bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-primary mb-4">Votre parcours</h2>

      <div class="border-l-4 border-primary pl-4 py-2">
        <p class="text-gray-600">
          Continuez à explorer EchoSafe pour trouver du soutien et des
          ressources adaptées à vos besoins.
        </p>
      </div>

      <div class="mt-6">
        <a
          href="/messages/aide"
          class="inline-flex items-center px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z"
              clip-rule="evenodd"></path>
          </svg>
          Parler à un aidant
        </a>
      </div>
    </div>
  </div>
</AppLayout>
